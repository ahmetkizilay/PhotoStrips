<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahmetkizilay.image.photostrips">

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="17"/>
	
	<uses-permission android:name="android.permission.CAMERA"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.vending.BILLING" />
	
	<uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    
    <application
        android:label="@string/app_name"
        android:theme="@style/style_mytheme"
        android:icon="@drawable/ic_photostrips"
        android:allowBackup="true">
        <activity
            android:name="com.ahmetkizilay.image.photostrips.PhotoBoothActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
				<action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ahmetkizilay.image.photostrips.GalleryActivity"
            android:label="@string/app_name">
            <intent-filter>
               <!-- <action android:name="android.intent.action.MAIN" />-->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ahmetkizilay.image.photostrips.AltGalleryActivity"
            android:label="@string/app_name">
            <intent-filter>
                <!-- <action android:name="android.intent.action.MAIN" />-->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ahmetkizilay.image.photostrips.ViewImageActivity"
            android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>