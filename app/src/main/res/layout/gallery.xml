<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000">

    <com.ahmetkizilay.image.photostrips.utils.CustomHorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent" android:id="@+id/hswGallery"
        android:layout_marginTop="50dp">

       <LinearLayout
            android:id="@+id/mygallery"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" />        
    </com.ahmetkizilay.image.photostrips.utils.CustomHorizontalScrollView>

    <LinearLayout
        android:id="@+id/loGalleryWaitScreen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" android:background="#66eeeeee" android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/pbWait"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="loading pictures..." android:textColor="#000" android:textStyle="bold"/>
    </LinearLayout>

</FrameLayout>